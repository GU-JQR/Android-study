<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#B3B18500"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:src="@drawable/zhoujielun"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/item_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="丑八怪"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/item_img"
        android:paddingHorizontal="20dp" />

    <TextView
        android:id="@+id/item_Singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="薛之谦"
        android:layout_below="@+id/item_song"
        android:layout_toRightOf="@+id/item_img"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_lyricist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="意外"
        android:layout_below="@+id/item_Singer"
        android:layout_toRightOf="@+id/item_img"
        android:paddingHorizontal="20dp"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3:29"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>