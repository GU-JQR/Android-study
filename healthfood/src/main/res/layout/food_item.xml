<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#FDFF00"
    android:padding="10dp">
    <!--    图片  食物名称  不宜同吃    -->
    <ImageView
        android:id="@+id/iv_foodpic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/dog"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="狗肉"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FFFF0000"
        android:layout_toRightOf="@+id/iv_foodpic"
        android:layout_alignTop="@+id/iv_foodpic"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/tv_noeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="鳖"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/iv_foodpic"
        android:layout_alignBottom="@+id/iv_foodpic"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="8dp" />

</RelativeLayout>