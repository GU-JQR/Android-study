<?xml version="1.0" encoding="utf-8"?>
<!--线性布局容器，可以设置内容垂直排列或者横向排列
orientation="vertical" 垂直排列
orientation="horizontal" 水平排列
容器单位 dp
字体单位 sp
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--    简单控件 文本-->
    <TextView
        android:id="@+id/tv_content01"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="hello Andriod"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:textColor="@color/green"
        android:gravity="center"
        android:background="@color/yellow"
        />
<!--按钮-->
    <Button
        android:id="@+id/btn_click01"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="按钮1"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:background="#ff3800"
        android:layout_gravity="center_horizontal"
        android:onClick="click01"

        />

    <Button
        android:id="@+id/btn_click02"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="按钮2"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:background="#ff3800"
        android:layout_gravity="center_horizontal"
        android:onClick="click02"
        android:layout_marginTop="20dp"
        />

<!--    横向排列四个按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/btn_num01"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="#cccccc"
            android:layout_gravity="center_horizontal"
            android:onClick="click02"
            android:layout_marginHorizontal="4dp"
            />
        <Button
            android:id="@+id/btn_num02"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="#cccccc"
            android:layout_gravity="center_horizontal"
            android:onClick="click02"
            android:layout_marginHorizontal="4dp"
            />
        <Button
            android:id="@+id/btn_num03"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="#cccccc"
            android:layout_gravity="center_horizontal"
            android:onClick="click02"
            android:layout_marginHorizontal="4dp"
            />
        <Button
            android:id="@+id/btn_num04"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="#cccccc"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="4dp"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/et_result"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"></EditText>
    
    <ImageView
        android:id="@+id/iv_pic01"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/tiger_back"
        android:scaleType="centerCrop"/>
    <Button
        android:id="@+id/btn_change"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="切换图片"
        android:textSize="30sp"
        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/baseline_bug_report_48"
        android:scaleType="centerInside"
        />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/sqrt"
        android:scaleType="centerInside"
        />

<!--    <Button-->
<!--        android:layout_width="60dp"-->
<!--        android:layout_height="60dp"-->
<!--        android:text="C"-->
<!--        android:textSize="20sp"-->
<!--        android:textStyle="bold"-->
<!--        android:background="@drawable/btn_back_shape"-->
<!--        />-->

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="C"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/btn_back_shape2"
        />
</LinearLayout>